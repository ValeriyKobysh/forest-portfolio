header.header.js-start-block(style="background-image: url(img/index-bg.png)")

    .header__top

        .header__social
            - var socialModificator = 'light'
            include ../social/social

        .header__menu
            include ../hamburger/hamburger
            include ../menu/menu

    .header__content

        .header__avatar
            img(src="img/avatar.png", alt="")
        case title
            when "Блог"
                h1.header__heading Блог
                span.header__desc Статьи, которые я написал
            when "Мои работы"
                span.header__name Владимир Астахов
                span.header__desc Личный сайт веб разработчика
    
    .header__bot
        a.header__scroll.js-scroll-next-block(href="javascript:;")