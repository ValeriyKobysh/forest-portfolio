        form.works__callback
            .works__callback-bg(style="background-image: url(img/works-about-bg.png)")
            span.works__callback-heading Связаться со мной

            .works__callback-wrap
                input.works__callback-input(type="text" placeholder="Имя")

            .works__callback-wrap
                input.works__callback-input(type="email" placeholder="Email")

